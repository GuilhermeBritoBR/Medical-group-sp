<!DOCTYPE html>
<html lang="pt-br">
    <%- include('head-1'); %>
    <body>
        <!---esse é o banner com todos os menus inclusive o de logar-->
        <%- include('header-logado'); %>

        <style>
            .table-div-consulta{
                background-color: #fff;
                padding: 50px;
                border: solid 1px #fff;
                border-radius:16px;
display: inline-block;            }
            .consultas-container{
                text-align: center;
            }
        </style>
<div class="consultas-container">
    <h1>Suas consultas</h1>
        <table class="table-div-consulta">
            <thead>
                <tr>
                    <th>Paciente</th>
                    <th>Idade</th>
                    <th>Especialidade</th>
                    <th>Motivo</th>
                    <th>Data</th>
                    <th>Horário</th>
                    <th>Deficiência</th>
                </tr>
            </thead>
            <tbody>
                <% dados.forEach(function(row) { %>
                    <tr>
                        <td><%= row.nome %></td>
                        <td><%= row.idade %></td>
                        <td><%= row.especialidade %></td>
                        <td><%= row.motivo %></td>
                        <td><%= row.dia %></td>
                        <td><%= row.hora %></td>
                        <td><%= row.deficiencia %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    </body>
    <%- include('footer'); %>
</html>